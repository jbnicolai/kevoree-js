add node0, node1 : JavascriptNode
add sync : WebSocketGroup
add node0.hello, node0.hello1, node0.hello2 : HelloWorldComponent
add node1.console : FakeConsole
add myChan : RemoteWSChan

attach node0, node1 sync

set sync.port/node0 = "9000"

set myChan.host = "localhost"
set myChan.port = "9001"

bind node0.hello.sendText myChan
bind node0.hello1.sendText myChan
bind node0.hello2.sendText myChan
bind node1.console.inMsg myChan

network node0.ip.local 127.0.0.1